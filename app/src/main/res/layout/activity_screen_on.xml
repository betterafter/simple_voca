<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mainBlue_select"
            android:orientation="vertical"
            android:paddingHorizontal="30dp"
            android:paddingTop="30dp"
            android:paddingVertical="60dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/screen_on_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="2021.05.17"
                    android:textAlignment="center"
                    android:textColor="@color/blueGradient5"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/screen_on_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_light"
                    android:text="(월)"
                    android:textColor="@color/blueGradient5"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/screen_on_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_light"
                    android:text="13"
                    android:textAlignment="center"
                    android:textColor="@color/mainGray"
                    android:textSize="60sp" />

                <TextView
                    android:id="@+id/screen_on_time_parser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_light"
                    android:text=":"
                    android:textAlignment="center"
                    android:textColor="@color/mainGray"
                    android:textSize="60sp" />

                <TextView
                    android:id="@+id/screen_on_minuite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_light"
                    android:text="30"
                    android:textAlignment="center"
                    android:textColor="@color/mainGray"
                    android:textSize="60sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/screen_on_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nanum_square_extra_bold"
            android:text="Apple"
            android:textAlignment="center"
            android:textColor="@color/mainBlue_hard"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/screen_on_announce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nanum_square_regular"
            android:text="[apple]"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/screen_on_mean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nanum_square_bold"
            android:text="사과"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/screen_on_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/screen_on_example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nanum_square_extra_bold"
            android:text="[예문] this is an apple"
            android:textAlignment="center"
            android:textColor="@color/mainBlue_hard"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/screen_on_example_mean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/nanum_square_regular"
            android:text="이것은 사과이다"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/screen_on_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/nanum_square_regular"
            android:text="이건 사과래 이건 사과래 이건 사과래 이건 사과래 이건 사과래 이건 사과래 이건 사과래 이건 사과래"
            android:textAlignment="center"
            android:textColor="@color/backgroundBlack" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>