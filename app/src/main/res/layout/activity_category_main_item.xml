<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/category_main_category_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="25dp"
        android:layout_weight="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/category_main_category_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanum_square_extra_bold"
                        android:text="전체"
                        android:textColor="@color/mainBlue_hard"
                        android:textSize="24sp" />

                    <ImageButton
                        android:id="@+id/category_main_category_select_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@color/white"
                        android:src="@drawable/outline_task_alt_24"
                        android:tint="@color/white" />

                    <ImageButton
                        android:id="@+id/category_main_category_share_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/shape_circle"
                        android:backgroundTint="@color/mainBlue_hard"
                        android:src="@drawable/baseline_share_24"
                        android:tint="@color/white" />

                    <ImageButton
                        android:id="@+id/category_main_category_test_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/shape_circle"
                        android:backgroundTint="@color/mainBlue_hard"
                        android:src="@drawable/baseline_quiz_20"
                        android:tint="@color/white" />

                </LinearLayout>

                <TextView
                    android:id="@+id/category_main_category_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanum_square_bold"
                    android:text="전체 단어를 담고 있는 단어장입니다."
                    android:textColor="@color/backgroundBlack"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_rectangle_with_round_radius"
                        android:backgroundTint="@color/mainBlue_hard"
                        android:fontFamily="@font/nanum_square_bold"
                        android:padding="5dp"
                        android:text="전체 단어"
                        android:textAlignment="center"
                        android:textColor="@color/blueGradient5"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_rectangle_with_round_radius"
                        android:backgroundTint="@color/mainBlue_hard"
                        android:fontFamily="@font/nanum_square_bold"
                        android:padding="5dp"
                        android:text="중요 단어"
                        android:textAlignment="center"
                        android:textColor="@color/blueGradient5"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_rectangle_with_round_radius"
                        android:backgroundTint="@color/mainBlue_hard"
                        android:fontFamily="@font/nanum_square_bold"
                        android:padding="5dp"
                        android:text="외운 단어"
                        android:textAlignment="center"
                        android:textColor="@color/blueGradient5"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/category_main_category_all_word"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanum_square_bold"
                        android:text="1001개"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/category_main_category_important_word"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanum_square_bold"
                        android:text="387개"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/category_main_category_remind_word"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanum_square_bold"
                        android:text="650개"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/category_main_editor_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:visibility="gone"
                android:gravity="center"
                android:weightSum="3"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/category_editor_delete"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/mainRed"
                    android:layout_marginHorizontal="15dp"
                    android:clickable="false"
                    android:src="@drawable/baseline_delete_20" />

                <ImageButton
                    android:id="@+id/category_editor_edit"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/mainBlue"
                    android:layout_marginHorizontal="15dp"
                    android:clickable="false"
                    android:src="@drawable/baseline_edit_24"/>

                <ImageButton
                    android:id="@+id/category_editor_close"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="15dp"
                    android:clickable="false"
                    android:backgroundTint="@color/backgroundBlack"
                    android:tint="@color/white"
                    android:src="@drawable/baseline_close_36"/>
<!---->
            </LinearLayout>
        </FrameLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>