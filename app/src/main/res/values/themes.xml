<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Simple_voca" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainBlue</item>
        <item name="colorPrimaryVariant">@color/mainBlue</item>
        <item name="colorOnPrimary">@color/mainBlue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mainBlue</item>
        <item name="colorSecondaryVariant">@color/mainBlue</item>
        <item name="colorOnSecondary">@color/mainBlue</item>
        <!-- Status bar color. -->
        <!-- <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item> -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/mainBlue</item>
        <!-- Customize your theme here. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.Simple_voca.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Simple_voca.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Simple_voca.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>